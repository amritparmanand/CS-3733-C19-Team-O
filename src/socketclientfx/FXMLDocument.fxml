<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="socketclientfx.FXMLDocumentController">
   <children>
      <HBox prefHeight="266.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" prefHeight="220.0" prefWidth="300.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Welcome" />
                  <TextField fx:id="sendUserField" prefHeight="25.0" prefWidth="500.0" promptText="Username" />
                  <PasswordField fx:id="sendPasswordField" promptText="Password" />
                  <Button fx:id="loginButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleLoginButton" text="Login" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="rcvdMesg" text="Label" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="connectButton" mnemonicParsing="false" onAction="#handleConnectButton" text="Connect" />
            <Button fx:id="disconnectButton" mnemonicParsing="false" onAction="#handleDisconnectButton" text="Disconnect" />
            <Label text="Host:" />
            <TextField fx:id="hostTextField" prefHeight="25.0" prefWidth="200.0" text="localhost" />
            <Label text="Port:" />
            <TextField fx:id="portTextField" minWidth="-Infinity" prefHeight="25.0" prefWidth="48.0" text="2015" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0">
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin>
         <children>
            <Label fx:id="connectedLabel" text="Not connected">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Label>
            <CheckBox fx:id="autoConnectCheckBox" mnemonicParsing="false" onAction="#handleAutoConnectCheckBox" text="Auto Connect">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </CheckBox>
            <Label text="Retry Interval (sec):">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="retryIntervalTextField" onAction="#handleRetryIntervalTextField" prefHeight="25.0" prefWidth="41.0" text="2" />
         </children>
      </HBox>
   </children>
</VBox>
